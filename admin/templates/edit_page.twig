{% extends "index.twig" %}
{% block content %}
    <div class="graphs">
        <h3 class="blank1">Создание/Редактирование</h3>
        <div class="tab-content">
            <div class="tab-pane active" id="horizontal-form">
                <form class="form-horizontal" action="" method="post">
                    <input type="hidden" name="save" value="1">
                    <input type="hidden" name="id" value="{{ data.page.id }}">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Название</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control1" name="title" id="title" placeholder="Название" value="{{ data.page.title }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="header" class="col-sm-2 control-label">Заголовок</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control1" name="header" id="header" placeholder="Заголовок" value="{{ data.page.header }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="content" class="col-sm-2 control-label">Контент</label>
                        <div class="col-sm-8">
                            <textarea name="content" id="content" cols="50" rows="4" class="form-control1">{{ data.page.content }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="additional_content" class="col-sm-2 control-label">Дополнительный контент</label>
                        <div class="col-sm-8">
                            <textarea name="additional_content" id="additional_content" cols="50" rows="4" class="form-control1">{{ data.page.additional_content }}</textarea>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-2">
                                <button class="btn-success btn">Сохранить</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}